<%= params %>
<div id="numbers">
  <% ("A".."J").to_a.each do |number| %>
  <div class="number"><%= number %></div>
  <% end %>
</div>


<div id="abc">
  <% (1..10).to_a.each do |letter| %>
  <div class="letter"><%= letter %></div>
  <% end %>
</div>



  <div class="container">
    <% @board.grid.each do |k,v| %>
       <% if v.content.is_a?(Water) %>
      <div class="water"></div>
      <% else %>
      <div class="ship"></div>
      <% end %>
      <% end %>

  </div>


